<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V14</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/img/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/mainchangepass.css">
    <link rel="stylesheet" type="text/css" href="~/css/styleresetpass.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="content">
        <div class="container">
            <div class="row" style="text-align:center">
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="form-group first">
                                <label for="username">Enter code</label>
                                <input type="text" class="form-control" id="username" name="numcode" placeholder="Enter code">
                                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#resetpass">Enter</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal" id="resetpass">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="login100-form-title p-b-32">
                        Change Password
                    </span>
                </div>
                <form method="post" asp-controller="account" asp-action="resetpass">
                    <div class="modal-body">
                        <span class="txt1 p-b-11">
                            New Password
                        </span>
                        <div class="wrap-input100 validate-input m-b-36" data-validate="Password is required">
                            <input class="input100" type="password" name="newpass">
                            <span class="focus-input100"></span>
                        </div>

                        <span class="txt1 p-b-11">
                            Confirm Password
                        </span>
                        <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                            <span class="btn-show-pass">
                                <i class="fa fa-eye"></i>
                            </span>
                            <input class="input100" type="password" name="pass">
                            <span class="focus-input100"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn">
                                Change Password
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</body>

</html>
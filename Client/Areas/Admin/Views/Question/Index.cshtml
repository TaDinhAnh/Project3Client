
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Question Table</h4>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Quesntion</th>
                            <th>Updated</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.listQuestion != null)
                            @foreach (var item in ViewBag.listQuestion)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Question1</td>
                                    <td>@item.Updated.ToString("dd/MM/yyyy")</td>
                                    @if (item.Status)
                                    {
                                        <td><label class="badge badge-success">enable</label></td>
                                    }
                                    else
                                    {
                                        <td><label class="badge badge-danger">disnable</label></td>
                                    }
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Answer Table</h4>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>Answer</th>
                            <th>Id Question</th>
                            <th>Updated</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.listAnswer != null)
                            @foreach (var item in ViewBag.listAnswer)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Answer1</td>
                                    <td>@item.IdQuestion</td>
                                    <td>@item.Updated.ToString("dd/MM/yyyy")</td>
                                    @if (item.Status)
                                    {
                                        <td><label class="badge badge-success">enable</label></td>
                                    }
                                    else
                                    {
                                        <td><label class="badge badge-danger">disnable</label></td>
                                    }
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List Account</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> User </th>
                        <th>Username</th>
                        <th> Id People </th>
                        <th> Date </th>
                        <th> Role </th>
                        <th> Status </th>
                        <th> Delete </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var acc in ViewBag.listAccount)
                    {
                    <tr>
                        <td class="py-1">
                            <img src="../../assets/images/faces-clipart/pic-1.png" alt="image" />
                        </td>
                        <td>@acc.UserName</td>
                        <td>@acc.IdPeople</td>
                        <td>@acc.Date.ToString("dd/MM/yyyy")</td>
                        <td>@acc.Role</td>
                        @if (acc.Status)
                        {
                            <td>
                                <label class="badge badge-gradient-success">ENABLE</label>
                            </td>
                        }
                        else
                        {
                            <td>
                                <label class="badge badge-gradient-danger">DISNABLE</label>
                            </td>
                        }
                        <td><button type="button" class="btn btn-gradient-success btn-rounded btn-fw">Del</button></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
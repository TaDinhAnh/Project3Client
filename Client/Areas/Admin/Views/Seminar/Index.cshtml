@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Seminar Table</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th> Seminar </th>
                        <th> Presenter </th>
                        <th> Time </th>
                        <th> Status </th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.listSeminar != null)
                        @foreach (var seminar in ViewBag.listSeminar)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/images/faces/face1.jpg" class="mr-2" alt="image"> @seminar.Name
                                </td>
                                <td>@seminar.Presenters</td>
                                <td>@seminar.Day </td>
                                @if (seminar.Day < DateTime.Now && seminar.Status)
                                {
                                    <td>
                                        <label class="badge badge-gradient-success">Completed</label>
                                    </td>
                                }
                                else if (seminar.Day >= DateTime.Now && seminar.Status)
                                {
                                    <td>
                                        <label class="badge badge-gradient-warning">Coming soon</label>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <label class="badge badge-gradient-danger">False</label>
                                    </td>
                                }
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>